  <body>
    <div class="navbar">
      <i
        class="fa-brands fa-facebook fa-2xl"
        style="color: #1f4fa3; width: 50px; margin: 30px 0 0 10px"
      ></i>
      <div class="search-bar">
        <div
          class="search-icon"
          style="
            border-radius: 20px;
            background-color: #d1d0d0;
            margin-left: 5px;
          "
        >
          <i
            class="fa-solid fa-magnifying-glass fa-xs"
            style="color: #7e7e7e; margin: 10px 0 0 10px"
          ></i>
          <input
            type="text"
            id="searchInput"
            placeholder="Search..."
            style="
              border: none;
              height: 20px;
              background-color: #d1d0d0;
              outline: none;
            "
          />
        </div>
        <div style="display: flex">
          <div class="Next-page" style="margin-left: 200px">
            <i class="fa-solid fa-house fa-xl" style="color: #3d7be6"></i>
          </div>
          <div class="Next-page" style="margin-left: 50px">
            <i class="fa-solid fa-user-group fa-lg" style="color: #000000"></i>
          </div>
          <div class="Next-page" style="margin-left: 50px">
            <i class="fa-solid fa-comment fa-lg" style="color: #000000"></i>
          </div>
          <div >  <li class="dropdown"><a href="#" class="dropbtn" style="margin-left: 100px;"><img src="https://www.kkday.com/vi/blog/wp-content/uploads/chup-anh-dep-bang-dien-thoai-25.jpg" alt=""></a>
            <div class="dropdown-List">
              <a href="#">Trang Cá nhân </a>
              <a href="#">Đăng Xuất</a>
              
            </div>
            </li>
          </div>
        </div>
      </div>
    </div>
    <div class="container">
      <div class="header">
        <div style="display: flex">
          <div
            style="
              background-color: rgb(218, 218, 218);
              width: 110px;
              height: 110px;
              border-radius: 50%;
              box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2),
                0 6px 20px 0 rgba(0, 0, 0, 0.19);
            "
          >
            <img
              src="https://th.bing.com/th/id/OIP.Y50bz_Lk7pNqt0yUxHY5XgHaLH?w=202&h=303&c=7&r=0&o=5&dpr=1.3&pid=1.7"
              alt="Avatar"
            />
          </div>
          <h1>Tên người dùng</h1>
        </div>
        <div style="display: flex">
          <p>tên đệm</p>
          <div style="margin: 0px 0 0 800px">
            <button
              type="submit"
              style="
                background-color: rgb(0, 166, 255);
                width: 80px;
                height: 30px;
                border-radius: 6px;
                color: #fff;
                border: none;
              "
            >
              kết bạn
            </button>
            <button
              class="btn"
              id="btn-list-friend"
              style="
                background-color: rgb(231, 231, 231);
                width: 80px;
                height: 30px;
                margin: 10px;
                border-radius: 6px;
                color: #000000;
              "
              onclick="showMessage()"
              ;
            >
              bạn bè
            </button>
          </div>
        </div>
        <div
          class="friend"
          id="friend"
          style="background-color: #ffffff; position: relative; display: none;  box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2),
          0 6px 20px 0 rgba(0, 0, 0, 0.19);
        margin-left: 10px; height: 230px;"
        >
          <button
            id="btn-miniature"
            style="
              border: none;
              font-size: 30px;
              border-radius: 10px;
              margin-left: 980px;
              position: absolute;
              background-color: rgb(255, 253, 253);
            "
          >
          <i class="fa-solid fa-circle-minus"></i>
          </button>
          <ul style="display: flex;">
            <li
              style="
                list-style: none;
                background-color: #fffdfd;
                width: 130px;
                border-radius: 10px;
                margin-top: 10px;
                box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2),
                  0 6px 20px 0 rgba(0, 0, 0, 0.19);
                margin-left: 10px;
              "
            >
              <div >
                  <img
                    src="https://th.bing.com/th/id/OIP.Y50bz_Lk7pNqt0yUxHY5XgHaLH?w=202&h=303&c=7&r=0&o=5&dpr=1.3&pid=1.7"
                    alt="Avatar"
                  />
              
                <p style="text-align: center; font-size: 20px">tên</p>
                <button
                  type="submit"
                  style="
                    margin: 0 0 10px 22px;
                    background-color: rgb(0, 166, 255);
                    width: 80px;
                    height: 30px;
                    border-radius: 6px;
                    color: #fff;
                    border: none;
                  "
                >
                  kết bạn
                </button>
              </div>
            </li>
          </ul>
        </div>
      </div>

      <div class="content" style="display: flex">
        <div class="intro">
          <div class="status">
            <h2>Ảnh</h2>
          </div>
          <div class="photos" style="background-color: #fff; width: 390px;border-radius: 5px;  box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2),
          0 6px 20px 0 rgba(0, 0, 0, 0.19);">
            <img src="images/photo1.jpg" alt="Ảnh" />
            <img src="images/photo2.jpg" alt="Ảnh" />
            <img src="images/photo3.jpg" alt="Ảnh" />
          </div>
          <div class="about">
            <div id="intro-detail"style="background-color: #fff; width: 390px;border-radius: 5px;  box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2),
            0 6px 20px 0 rgba(0, 0, 0, 0.19);">
            <h2>Giới thiệu</h2>
              <span><i class="fa-solid fa-house"></i><span style="margin-left: 5px;">sống tại: <p></p></span></span>
              <span><i class="fa-solid fa-location-dot"></i><span style="margin-left: 5px;">đến từ: <p></p></span></span>
              <span><i class="fa-solid fa-school"></i></i><span style="margin-left: 5px;"> trường: <p></p></span></span>
              <span><i class="fa-solid fa-shield-heart"></i></i><span style="margin-left: 5px;">tình trạng hôn nhân: <p></p></span></span>
            </div>
          </div>
        </div>
        <div class="footer">
          <ul>
            <li><a href="#">bài viết</a></li>
          </ul>
        </div>
      </div>
    </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    <script>
      document
        .getElementById("btn-list-friend")
        .addEventListener("click", function () {
          // Hiển thị danh sách bạn bè
          document.getElementById("friend").style.display = "block";
        });
      document
        .getElementById("btn-miniature")
        .addEventListener("click", function () {
          // Hiển thị danh sách bạn bè
          document.getElementById("friend").style.display = "none";
        });
      
    </script>
  </body>
</html>

